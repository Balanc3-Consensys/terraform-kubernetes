{
  "variables": {
  },
  "builders": [{
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "ami_name": "kubernetes",
    "force_deregister": "true",
    "force_delete_snapshot": "true",
    "region": "us-west-2",
    "vpc_id": "vpc-e7b41880",
    "subnet_id": "subnet-3413de53",
    "associate_public_ip_address": "true",
    "type": "amazon-ebs",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "*ubuntu-xenial-16.04-amd64-server-*",
        "root-device-type": "ebs"
      },
      "owners": ["099720109477"],
      "most_recent": true
    }
  }],
  "provisioners": [
    {
    "type": "shell",
    "execute_command": "sudo {{ .Path }}",
    "inline": [
      "sleep 30",
      "apt-get update",
      "apt-get upgrade -y",
      "apt-get install -y apt-transport-https ca-certificates",
      "apt-key adv --keyserver hkp://ha.pool.sks-keyservers.net:80 --recv-keys 58118E89F3A912897C070ADBF76221572C52609D",
      "echo 'deb https://apt.dockerproject.org/repo ubuntu-xenial main' | tee /etc/apt/sources.list.d/docker.list",
      "apt-get update",
      "apt-get install -y linux-image-extra-$(uname -r) linux-image-extra-virtual",
      "apt-get install -y ncdu dnsutils telnet htop sysstat curl jq ubuntu-fan ntp git zfs nfs-common tree",
      "apt-get install -y docker-engine",
      "cd ~root",
      "git clone --depth 1 https://github.com/mingfang/docker-kubernetes-master.git",
      "cd docker-kubernetes-master && ./build",
      "cd ~root",
      "git clone --depth 1 https://github.com/mingfang/docker-kubernetes-node.git",
      "cd docker-kubernetes-node && ./build"
    ]
  }]
}
